
@{
    ViewData["Title"] = "PayCheckout";
}

@section Styles{
    <link rel="stylesheet" href="~/css/travelOrder.css" />
}
<body>
    <!-- 從這邊開始複製header跟nav，上面引用的css位置注意一下-->
    <nav>
        <div class="secondary-nav payTimeLine">
            <div class="icon">
                <i class="bi bi-check-circle-fill"></i>
                <div class="timeLineInfo">選擇方案</div>
            </div>
            <div class="line check"></div>
            <div class="icon">
                <i class="bi bi-check-circle-fill"></i>
                <div class="timeLineInfo">填寫資料</div>
            </div>
            <div class="line check"></div>
            <div class="icon more">
                <i class="bi bi-three-dots"></i>
                <div class="timeLineInfo">完成付款</div>
            </div>
        </div>
    </nav>
    <!-- 複製到這邊，下面article刪掉測試用內容，寫入自己的html。注意class名稱不要汙染到全域的html標籤 -->
    <article class="payContainer">
        <div class="payContainerInner">
            <div>
                <div class="row">
                    <div class="col-8">
                        <div class="leftSide py-3">
                            <div class="mainTitle">完成付款</div>
                            <div class="border-bottom-line"></div>
                            <div class="protectBox">所有付款資訊皆已安全加密保護</div>
                            <div class="infoBoxOuter">
                                <div class="payTypeRow">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                               id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            超商付款／銀行轉帳
                                        </label>
                                    </div>
                                    <div class="logo">
                                        <img src="~/Images/7-11.png">
                                    </div>
                                </div>
                                <div class="border-bottom-line"></div>
                                <div class="payTypeRow">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                               id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            LINE Pay
                                        </label>
                                    </div>
                                    <div class="logo">
                                        <img src="~/Images/line-pay-logo.png">
                                    </div>
                                </div>
                                <div class="border-bottom-line"></div>
                                <div class="payTypeRow">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                               id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            信用卡
                                        </label>
                                    </div>
                                    <div class="logo">
                                        <img src="~/Images/visalogo.png">
                                    </div>
                                </div>
                                <div class="p-3">
                                    <div class="creditCardInfo">
                                        <form>
                                            <div class="mb-3">
                                                <label class="col-form-label">卡號:</label>
                                                <input type="text" class="form-control">
                                            </div>

                                            <div class="mb-3">
                                                <label class="col-form-label">有效日期:</label>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <input type="text" class="form-control">
                                                    </div>
                                                    <div class="col-6">
                                                        <input type="text" class="form-control">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="col-form-label">安全碼:</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="leftSide py-3">
                            <div class="infoTitle hasTag">優惠折扣</div>
                            <div class="infoBoxOuter">
                                <div class="infoBoxInner">
                                    <div class="mb-2 subInfoText">此訂單無適用優惠碼</div>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="輸入優惠碼"
                                               aria-label="Recipient's username" aria-describedby="button-addon2">
                                        <button class="btn btn-main" type="button" id="button-addon2">使用</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="leftSide py-3">

                            <div class="payInfoRow checkout  p-3">
                                <div class="left">點擊「確認付款方式」即表示確認訂單與右方總金額無誤，且同意<a>平台服務條款</a>、<a>退改政策</a></div>
                                <div class="right">
                                    <div class="mainTitle">NT$ 899</div>
                                    <button type="button" class="btn btn-main">確認付款方式</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 ">
                        <div class="rightSide ">
                            <div class="titleFontStyle">龜山島登島・賞鯨・環繞龜山島｜宜蘭龜山島半日遊</div>
                            <div class="subtext">賞鯨 & 環繞龜山島</div>
                            <div class="border-bottom-line"></div>
                            <div class="infoRow">
                                <div class="subInfoText">日期</div>
                                <div>2022年9月26日 10:00 上午</div>
                            </div>
                            <div class="infoRow">
                                <div class="subInfoText">數量</div>
                                <div>1 x 成人</div>
                            </div>
                            <div class="border-bottom-line"></div>
                            <div class="infoRow">
                                <div class="subInfoText">總價</div>
                                <div class="titleFontStyle">NT$ 899</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 編輯參加人彈窗 -->
            <div class="modal fade" id="joinModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
                 style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <button type="button" class="btn-close modalClose " data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        <div class="infoTitle mt-4">編輯參加人資料</div>
                        <div class="border-bottom-line"></div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label class="col-form-label">姓名:<span class="color-main"> *</span></label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="col-form-label">生日:<span class="color-main"> *</span></label>
                                    <input type="date" id="start" name="trip-start" class="form-control"
                                           value="2018-07-22" min="2018-01-01" max="2018-12-31">
                                </div>
                                <div class="mb-3">
                                    <label class="col-form-label">
                                        身分證件號碼（台灣身分證）:<span class="color-main">
                                            *
                                        </span>
                                    </label>
                                    <input type="text" class="form-control">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-primary">儲存</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 編輯聯絡資料彈窗 -->
            <div class="modal fade" id="contentModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                 aria-hidden="true" style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <button type="button" class="btn-close modalClose " data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        <div class="infoTitle mt-4">編輯參加人資料</div>
                        <div class="border-bottom-line"></div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label class="col-form-label">姓名:<span class="color-main"> *</span></label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="col-form-label">
                                        手機號碼:<span class="color-main">
                                            *
                                        </span>
                                    </label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="col-form-label">
                                        電子郵件:<span class="color-main">
                                            *
                                        </span>
                                    </label>
                                    <input type="text" class="form-control">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-primary">儲存</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
    <!-- 複製footer的範圍 -->
    <!-- 結束 -->
    @section Scripts{
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    }

</body>


