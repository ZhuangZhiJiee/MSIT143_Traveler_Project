

@{
    ViewData["Title"] = "Create";
    Layout = null;
}




<link rel="stylesheet" href="~/css/客服中心.css" />


@section Sytles{
    <style>
    </style>
}
<h1>歡迎成為會員</h1>

<h4>現在加入領取優惠哦!</h4>
<hr />
<div class="container">
    <div class="col-12">
        <div class="row row-cols-1">
            <div class="col">
                <div class="box_body d-flex  mb-2">
                    <div class="inputs p-2 flex-fill">
                        <header>姓氏</header>
                        <input class="form-control" type="text" placeholder="姓氏" aria-label="default input example" name="MemberTittle">
                    </div>

                    <div class="inputs p-2 flex-fill">
                        <header>名稱</header>
                        <input class="form-control" type="text" placeholder="名稱" aria-label="default input example" name="MemberName">
                    </div>
                </div>


                <div class="box_body d-flex  mb-2">
                    <div class="inputs p-2 flex-fill">
                        <header>EMAIL</header>
                        <input class="form-control" type="email" placeholder="123" aria-label="default input example" name="Email">
                    </div>

                    <div class="inputs p-2 flex-fill">
                        <header>聯繫電話</header>
                        <input class="form-control" type="text" placeholder="PHONE" aria-label="default input example" name="Phone">
                    </div>
                </div>

                <div class="box_body d-flex  mb-2">
                    <div class="inputs p-2 flex-fill">
                        <header>密碼</header>
                        <input class="form-control" type="password" placeholder="password" aria-label="default input example" name="Password">
                    </div>

                    <div class="inputs p-2 flex-fill">
                        <header>再次確認密碼</header>
                        <input class="form-control" type="password" placeholder="password" aria-label="default input example">
                    </div>
                </div>


                <div class="box_body d-flex  mb-2">
                    <div class="inputs p-2 ">
                        <header>居住縣市</header>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>台北市</option>
                            <option value="1">新北市</option>
                            <option value="2">基隆市</option>
                            <option value="3">桃園市</option>
                        </select>
                    </div>

                    <div class="inputs p-2 ">
                        <header>居住區域</header>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>大安區</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>

                    <div class="inputs p-2 flex-grow-1">
                        <header>地址</header>
                        <input class="form-control" type="text" placeholder="北投區111號" aria-label="default input example" name="Address">
                    </div>
                </div>

                <div class="box_body d-flex  mb-2">
                    <div class="inputs p-2 flex-fill">
                        <header>生日</header>
                        <input class="form-control" type="date" value="1990-01-01" aria-label="default input example" name="BirthDay">
                    </div>

                    <div class="inputs p-2 flex-fill">
                        <header>生理性別</header>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
                            <label class="form-check-label" for="flexRadioDefault1">
                                男
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                女
                            </label>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>


<div class="modal-footer">
    <button type="button" class="btn btn-success">Demo</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary ccc">Send</button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
